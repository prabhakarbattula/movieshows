<%= link_to "Create New Crew", new_crew_path, :class => "btn-small btn-success" %>

<h4 style="color:chartreuse; text-align:center; background-color: orangered"> Displaying Crew </h4>

<table class="table table-striped table-bordered">

  <tr>
    <th> Category </th>
    <th> Name </th>
    <th> ACTION </th>
    <th> ACTION </th>
  </tr>

  <% @crews.each do |crew| %>
      <tr>
        <td>  <%= crew.category.upcase %> </td>
        <td>  <%= crew.name.upcase %> </td>
        <td> <%= link_to "EDIT",  edit_crew_path(crew), :class => "btn-small btn-warning"  %>  </td>
        <td> <%= link_to "DELETE", crew_path(crew), method: :delete, :class => "btn-small btn-danger" %>  </td>
      </tr>
  <% end %>

</table>