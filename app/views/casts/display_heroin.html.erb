
<% if %>
    <% @casts_heroin.blank? %>

    <h4> No Heroin to display </h4>

<% else %>

    <h6> Displaying Heroin and Movies <%#= @casts_hero.first.hero.upcase %> </h6>

    <table class="table table-striped table-bordered">
      <tr>
        <th> Heroin </td>
        <th> Movie  </td>
      </tr>

      <% @casts_heroin.each do |cast| %>
          <tr>
            <td>  <%= cast.heroin.upcase %> </td>
            <td>  <%= cast.movie.name.upcase %> </td>
          </tr>
      <% end %>

    </table>

<% end %>

