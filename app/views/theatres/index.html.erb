
<%= link_to "Create New Theatre", new_theatre_path, :class => 'btn btn-small btn-success' %>
<hr>
<h4> Displaying Theatres </h4>

<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Place</th>

    <th> ACTION </th>
    <th> ACTION </th>

  </tr>

  <% @theatres.each do |theatre| %>
      <tr>
        <td><%= link_to theatre.name.upcase, spot_theatre_path(theatre) %></td>
        <td><%= theatre.place.upcase %></td>

        <td> <%= link_to "EDIT", edit_theatre_path(theatre), :class => 'btn btn-mini btn-warning' %> </td>
        <td> <%= link_to "DELETE", theatre_path(theatre), method: :delete, :class => 'btn btn-mini btn-danger' %> </td>
      </tr>
  <% end %>
</table>


