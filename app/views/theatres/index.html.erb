
<%= link_to "Create New Theatre", new_theatre_path, :class => 'btn btn-small btn-success' %>
<hr>
<h4> Displaying Theatres </h4>

<head>
  <style>

      table, td, th
      {
          border:2px solid blue;
      }
      th
      {
          background-color: royalblue;
          color:white;
      }
      td, th
      {
          padding:5px;
      }
      tr:nth-child(even) {background-color: white}
      tr:nth-child(odd) {background-color: lightcyan}
  </style>
</head>

<body>
<table>
  <tr>
    <th>Name</th>
    <th>Place</th>

    <th> ACTION </th>
    <th> ACTION </th>

  </tr>

  <% @theatres.each do |theatre| %>
      <tr>
        <td><%= link_to theatre.name.upcase, theatre_path(theatre.id) %></td>
        <td><%= theatre.place.capitalize %></td>

        <td> <%= link_to "EDIT", edit_theatre_path(theatre.id), :class => 'btn btn-mini btn-warning' %> </td>
        <td> <%= link_to "DELETE", theatre_path(theatre.id), method: :delete, :class => 'btn btn-mini btn-danger' %> </td>
      </tr>
  <% end %>
</table>
</body>
